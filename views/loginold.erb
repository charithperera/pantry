<% if session[:message] %>
  <h2><%= session[:message] %></%></h2>
<% end %>

<section>
  <form action="login" method="post">
    <label>
      Username
      <input type="text" name="email">
    </label>
    <label>
      Password
      <input type="password" name="password">
    </label>
    <input type="submit" value="login">
    <p>Don't have an acount? <a href="/signup">Sign Up!</a></p>
  </form>
</section>
